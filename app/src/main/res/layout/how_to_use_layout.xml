<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/source"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/darksheet_bottom"
    android:orientation="vertical">



    <View
        android:layout_width="50dp"
        android:layout_height="9dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/view_corners" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/sanfrans_bold"
        android:text="How to use"
        android:textColor="@color/white"
        android:textSize="19sp" />



    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/white_stroke">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/baseline_swipe_up_24" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sanfrans_medium"
        android:text="Tap Scroll"
        android:textColor="@color/white"
        android:textSize="17sp" />


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:fontFamily="@font/sanfrans_regular"
        android:textColor="@color/offwhite"
        android:text="Tap Scroll - the quickest way to zip back to the top of any app with just one tap. To use this feature, just tap the top right corner of your phone from anywhere. Click the button \nbelow to learn how."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/enableAccessibility"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/increase_corner"
        >

        <TextView
            android:id="@+id/btnTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sanfrans_medium"
            android:text="Show guide"
            android:textColor="@color/black"
            android:textSize="17sp" />


    </RelativeLayout>

</LinearLayout>